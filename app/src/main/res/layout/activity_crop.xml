<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CustomView.CropActivity">

    <com.example.imageselectframetest.CustomView.PlusImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"  android:id="@+id/imageViewOrigin"
            android:scaleType="matrix"/>
    <com.example.imageselectframetest.CustomView.CutViewCircle
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView2"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Btn_Cut" android:layout_gravity="bottom|center"/>
</FrameLayout>